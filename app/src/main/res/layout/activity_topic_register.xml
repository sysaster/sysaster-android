<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TopicRegisterActivity"
    android:padding="16dp"
    android:background="@color/colorPrimary">

    <EditText
        android:id="@+id/et_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:minHeight="100dp"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:hint="Topic code"
        android:textColorHint="@color/colorAccent"
        android:background="@drawable/rounded_corner_topic"
        android:inputType="text"/>

    <Button
        android:id="@+id/bt_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_topic"
        android:background="@drawable/rounded_corner_topic_button"
        android:layout_marginTop="5dp"
        android:text="Submit"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"/>

</RelativeLayout>